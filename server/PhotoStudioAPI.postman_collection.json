      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/bookings",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "bookings"]
        }
      }
    }
  ]
}
