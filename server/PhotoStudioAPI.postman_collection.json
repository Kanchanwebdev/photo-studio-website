{
  "info": {
    "name": "Photo Studio API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"supersecurepassword\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if (res.token) {",
              "    pm.environment.set(\"token\", res.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Seed Services",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/seed",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "seed"]
        }
      }
    },
    {
      "name": "Get Services",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/services",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "services"]
        }
      }
    },
    {
      "name": "Add Booking",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/bookings",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "bookings"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Rahul Sharma\",\n  \"phone\": \"9876543210\",\n  \"email\": \"rahul@test.com\",\n  \"eventType\": \"Wedding\",\n  \"date\": \"2025-11-20\",\n  \"venue\": \"Kolhapur Palace\",\n  \"budget\": 100000,\n  \"message\": \"Need full day coverage\"\n}"
        }
      }
    },
    {
